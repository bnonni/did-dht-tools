{
  "compilerOptions": {
    "lib": [
      "ES2022",
    ],
    "declarationDir": "./dist/types",
    "outDir": "./dist/esm",
    "rootDir": "./",
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": false,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "src/bin"
  ],
  "exclude": [
    "node_modules",
    "out",
    "DATA",
    "dist"
  ]
}